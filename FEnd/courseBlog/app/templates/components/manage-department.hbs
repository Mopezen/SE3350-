{{#if isManagingDepartment}}
    <div class="row">
        <div class="large-12 columns">
            <h4 align="center"> Manage Department</h4>
        </div>
    </div>

    <div class="row">
        <div class="large-10  large-centered columns">
            <div class="panel">
              {{#if isAddingNewDepartment}}
                  <h2>Add New Department</h2>
                  <form>
                      <div class="row">
                          <div class="large-12 columns">
                              <label>Name
                                {{input value=name type="text" }}
                              </label>
                          </div>
                      </div>
                      <div class="row">
        			            <div class="large-12 columns">
        			                <label>Choose the department's faculty:
        			                    <select id="faculty">
        			                        {{#each facultyModel as |oneFaculty|}}
        			                            <option value={{oneFaculty.id}}>{{oneFaculty.name}}</option>
        			                        {{/each}}
        			                    </select>
        			                </label>
        			            </div>
        			        </div>
                  </form>
                  <br>
                  <div class="row">
                      <div class="large-12 columns">
                          <a href="#" class="button radius" {{action 'saveNewDepartment'}}>Save</a>
                          <a href="#" class="button radius" {{action 'cancelAddNewDepartment'}}>Cancel</a>
                      </div>
                  </div>
                  <br>
              {{else}}

                  {{#each DepartmentModel as |oneDepartment|}}
                      <div class="row">
                          <li class="large-3 columns">  {{oneDepartment.name}} </li>

                          <div class="large-2 columns">
                            {{delete-Department ID=oneDepartment.id }}
                          </div>
                      </div>
                  {{/each}}
                  <div class="row">
                      <div class="large-12 columns">
                          <br> <br> <br>
                          <a href="#" class="button radius" {{action 'addNewDepartment'}}>Add New Department</a>
                          <a href="#" class="button radius" {{action 'doneDepartment'}}>Done</a>
                      </div>
                  </div>
              {{/if}}
            </div>
        </div>
    </div>

{{else}}
    <div class="large-2 columns">
        <a href="#" class="button" {{action 'manageDepartment' }}>Manage Departments</a>
    </div>
{{/if}}


