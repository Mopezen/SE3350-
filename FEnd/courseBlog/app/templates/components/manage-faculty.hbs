{{#if isManagingFaculty}}
    <div class="row">
        <div class="large-12 columns">
            <h4 align="center"> Manage Faculty</h4>
        </div>
    </div>

    <div class="row">
        <div class="large-10  large-centered columns">
            <div class="panel">
                <div class="row">
                    <div class="large-12 columns">
                        <a href="#" class="button radius" {{action 'addNewFaculty'}}>Add New Faculty</a>
                    </div>
                </div>
              {{#if isAddingNewFaculty}}
                  <h2>Add New Faculty</h2>
                  <form>
                      <div class="row">
                          <div class="large-12 columns">
                              <label>Name
                                {{input value=name type="text" }}
                              </label>
                          </div>
                      </div>
                  </form>
                  <div class="row">
                      <div class="large-12 columns">
                          <a href="#" class="button radius" {{action 'saveNewFaculty'}}>Save</a>
                          <a href="#" class="button radius" {{action 'cancelAddNewFaculty'}}>Cancel</a>
                      </div>
                  </div>
                  <br>
              {{else}}
                {{#each facultyModel as |oneFaculty|}}

                    <div class="row">
                    {{#link-to 'faculties' oneStudent.id}} {{oneFaculty.name}} {{/link-to}}{{delete-Faculty ID=oneFaculty.id }}
                    </div>
                {{/each}}

              {{/if}}
            </div>
        </div>
    </div>

<!-- {{else}}
    <div class="large-2 columns">
        <a href="#" class="button" {{action 'manageFaculty' }}>Manage Faculties</a>
    </div> -->
{{/if}}


