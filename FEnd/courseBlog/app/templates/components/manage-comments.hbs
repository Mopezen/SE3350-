{{#if isEditing}}
    <h2>Add Comment</h2>
    <form>
        <div class="row">
            <div class="large-12 columns">
                <label>Text
                  {{input value=statement  type="text" rows="3" }}
                </label>
            </div>
        </div>
    </form>
    <br>
    <a href="#" class="button radius" {{action 'saveComment'}}>Save</a>
    <a href="#" class="button radius" {{action 'cancel'}}>Cancel</a>

{{else}}
  <h2>Comments  </h2>
  {{#each commentsModel as |oneComment|}}
          <li>  {{oneComment.statement}} </li>
  {{/each}}
  <br>
  <a href="#" class="button round" {{action 'addComment'}}>Add Comment</a>
{{/if}}
