<h2>{{selectedStudent.firstName}} {{selectedStudent.lastName}}</h2>
{{#if isEditing}}
    <form>
        <div class="row">
            <div class="large-12 columns">
                <label>Student's First Name
                  {{input value=selectedStudent.firstName type="text" }}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Student's Last Name
                  {{input value=selectedStudent.lastName type="text" }}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Student Number
                  {{input value=selectedStudent.number type="text" }}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Date Of Birth
                  {{input value=selectedStudent.DOB type="text" }}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Gender:
                    <select id="gender">
                        {{#each genderModel as |oneGender|}}
                            <option value={{oneGender.id}} selected={{eq genderID oneGender.id}}>{{oneGender.name}}</option>
                        {{/each}}
                    </select>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Academic Load:
                    <select id="academicLoad">
                        {{#each academicLoadModel as |oneAcademicLoad|}}
                            <option value={{oneAcademicLoad.id}}  selected={{eq academicLoadID oneAcademicLoad.id}}>{{oneAcademicLoad.name}}</option>
                        {{/each}}
                    </select>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Residency:
                    <select id="residency">
                        {{#each residencyModel as |oneResidency|}}
                            <option value={{oneResidency.id}} selected={{eq residencyID oneResidency.id}}>{{oneResidency.name}}</option>
                        {{/each}}
                    </select>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Country:
                    <select id="country">
                        {{#each countryModel as |oneCountry|}}
                            <option value={{oneCountry.id}} selected={{eq countryID oneCountry.id}}>{{oneCountry.name}}</option>
                        {{/each}}
                    </select>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Province:
                    <select id="province">
                        {{#each provinceModel as |oneProvince|}}
                            <option value={{oneProvince.id}} selected={{eq provinceID oneProvince.id}}>{{oneProvince.name}}</option>
                        {{/each}}
                    </select>
                </label>
            </div>
        </div>
    </form>
    <br>
    <a href="#" class="button radius" {{action 'save' selectedStudent.id}}>Save</a>
{{else}}
    <ul class="square">
        <ul>
            <li>Student Number: {{selectedStudent.number}}</li>
            <li>Date Of Birth: {{selectedStudent.DOB}}</li>
            <li>Gender: {{selectedStudent.gender.name}}</li>
            <li>Academic Load: {{selectedStudent.studyLoad.name}}</li>
            <li>Residency: {{selectedStudent.residency.name}}</li>
            <li>Country: {{selectedStudent.country.name}}</li>
            <li>Province: {{selectedStudent.province.name}}</li>
        </ul>
    </ul>
    <br>
    <a href="#" class="button radius" {{action 'edit'}}>Edit</a>
    <a href="#" class="button radius" {{action 'cancel'}}>Cancel</a>
{{/if}}